<div class="d-flex align-items-center vh-100">
  <div class="container">
    <div class="container text-center">
      <h1>Stopwatch</h1>
    </div>

    <div class="container d-flex justify-content-center pt-4">
      <table class="table table-responsive" style="width: auto;">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Time</th>
            <th scope="col">Stop</th>
          </tr>
        </thead>
        <tbody>
          <% swimmers.forEach(function(swimmer, i) { %>
            <tr>
              <input type="hidden" class="swimmerID" value="<%= swimmer.id %>">
              <td class="align-middle"><%= swimmer.name %></td>
              <td class="align-middle timer">0.00</td>
              <td class="align-middle"><button class="btn btn-primary stop">Stop</button></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div class="container d-flex justify-content-center">
      <button class="btn btn-secondary done" disabled>Done</button>
    </div>
  </div>
</div>

<input type="hidden" class="race" value="<%= race %>">

