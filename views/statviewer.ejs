<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Stat Viewer</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>

<body>
  <div class="d-flex justify-content-center vh-100" style="flex-direction: column">
    <div class="text-center">
      <h1>Swimmer Stats</h1>
      <div class="d-flex justify-content-center align-items-center">
        <div class="dropdown px-1">
          <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
            Age Group
          </button>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item active group">10 and under</a></li>
            <li><a class="dropdown-item group">11 - 12 years</a></li>
            <li><a class="dropdown-item group">13 - 14 years</a></li>
            <li><a class="dropdown-item group">15 and over</a></li>
          </ul>
        </div>

        <div class="dropdown px-1">
          <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
            Swimmer Name
          </button>
          <ul class="dropdown-menu swimmers">
            <% swimmers.forEach(function(swimmer, i) { %>
              <% if (i == 0) { %>
                <li><a class="dropdown-item group active swimmer" value="<%= swimmer.name + ',' + swimmer.id %>"><%= swimmer.name %></a></li>
              <% } else { %>
                <li><a class="dropdown-item group swimmer" value="<%= swimmer.name + ',' + swimmer.id %>"><%= swimmer.name %></a></li>
              <% } %>
            <% }) %>
          </ul>
        </div>
      </div>
    </div>

    <div class="d-flex justify-content-center pt-3">
      <div id="chartContainer" style="height: 370px; width: 50%;"></div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
  <script src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>
  <script src="https://canvasjs.com/assets/script/jquery.canvasjs.min.js"></script>
  <script src="scripts/statviewer.js"></script>
</body>

</html>
